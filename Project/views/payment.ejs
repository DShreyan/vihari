<%- include("partials/header.ejs") %>
    <%- include("partials/navbar.ejs") %>
    <div class="gallary-header text-center">
        <h2 style="margin-top: 40px;">
            Payment
        </h2>
    </div>
        <div class="container payment-container">
            <form action="" style="border-radius: 15px;">
                <div class="row" >
                    <div class="col">
                        <!-- <h3 class="title">payment</h3> -->
                        <div class="inputBox" style="display: flex;flex-direction: row;">
                            <div>
                                <span>cards accepted :</span>
                                <img src="../images/cards.png" alt="">
                            </div>
                            <div class="icon-list" style="margin-left: 50px;">
                                <span>upi :</span>
                                <a href="https://pay.google.com"><img class="icon-img" src="../images/GPayNewLogo.png"></a>
                                <a href="https://www.phonepe.com"><img class="icon-img" src="../images/phonepe.svg"></a>
                                <a href="https://pay.amazon.com"><img class="icon-img" src="../images/amazonpay_new.png"></a>
                            </div>
                        </div>
                        
                        <div class="inputBox" >
                            <span>name on card :</span>
                            <input type="text" >
                        </div>
                        <div class="inputBox">
                            <span>credit card number :</span>
                            <input type="number">
                        </div>
                        <div class="inputBox">
                            <span>exp month :</span>
                            <input type="number">
                        </div>
                        <div class="flex">
                            <div class="inputBox">
                                <span>exp year :</span>
                                <input type="number">
                            </div>
                            <div class="inputBox">
                                <span>CVV :</span>
                                <input type="number">
                            </div>
                        </div>
                    </div>
                </div>
                <input type="submit" value="proceed to payment" class="submit-btn" style="border-radius: 5rem;">
            </form>
        </div>
