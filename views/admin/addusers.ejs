<%- include("../partials/admindbheader.ejs");%>
<div class="login-page">
    <!-- <div style="margin-left: 600px;"><h1>Users Details</h1></div> -->
    <div class="login-body login-page">
        <div class="container login-container signin">
            <div class="row login-row">
              <div class="col-md-12">
                <div class="row login-row">
                    <img src="../Images/vihari-logo.png" class="image-logo">
                  </div>
                <div class="row login-row">
                  <div class="col-md-6">
                    <form action="/adduser" method="post" id="login-form">
                      <div class="row login-row">
                        <div class="col-md-6">
                        <div class="input-group mb-3 user"> 
                          <span class="input-group-text span"><i class="fa-solid fa-user icon"></i></span>
                          <div class="form-floating">
                            <input type="text" class="form-control inputs" id="f-name" name="fname" placeholder="Username" fdprocessedid="2myzgp" >
                            <span class="invalid-form" id="invalid-fname"></span>
                            <label for="floatingInputGroup1">First Name</label>
                          </div>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="input-group mb-3 user">
                        <span class="input-group-text span"><i class="fa-solid fa-user icon"></i></span>
                        <div class="form-floating">
                          <input type="text" class="form-control inputs" id="lname" name="lname" placeholder="Username" fdprocessedid="2myzgp">
                          <span class="invalid-form" id="invalid-lname"></span>
                          <label for="floatingInputGroup1">Last Name</label>
                        </div>
                      </div>
                    </div>
                  </div>
                    <div class="input-group mb-3 user">
                      <span class="input-group-text span"><i class="fa fa-envelope"></i></span>
                      <div class="form-floating">
                        <input type="text" class="form-control inputs" name="email" placeholder="Username" fdprocessedid="2myzgp" id="email" >
                        <span class="invalid-form" id="invalid-email"></span>
                        <label for="floatingInputGroup1">Email</label>
                      </div>
                    </div>
                    <div class="input-group mb-3">
                      <span class="input-group-text span"><i class="fa-solid fa-key icon"></i></span>
                      <div class="form-floating">
                        <input type="password" class="form-control inputs" name="psd" placeholder="Password" fdprocessedid="2myzgp" id="password" >
                        <span class="invalid-form" id="invalid-password"></span>
                        <label for="floatingInputGroup1">Password</label>
                      </div>
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text span"><i class="fa-solid fa-key icon"></i></span>
                        <div class="form-floating">
                          <input type="password" class="form-control inputs"  placeholder="Confirm password" fdprocessedid="2myzgp" id="cpassword" >
                          <span class="invalid-form" id="invalid-cp"></span>
                          <label for="floatingInputGroup1">Confirm Password</label>
                        </div>
                      </div>
                    <input type="submit" value="ADD USER" class="btn btn-primary btn-submit-login">
                  </form>
                  </div>
                </div>
                </div>
              </div>
            </div>
           </div>
           <script>
            var form=document.getElementById('login-form');
            form.addEventListener('submit',function (e){
            if(FnameValidation()==false || LnameValidation()==false || EmailValidation()==false || PValidation()==false || CPValidation()==false){
              e.preventDefault();  
            }
            else {
              console.log("Sign in successfull");
            }
            });
          </script>
        </div>
