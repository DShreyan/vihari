<%- include("../partials/admindbheader.ejs");%>
    <div style="padding-left: 500px;">
        <h1>Tours Details</h1>
    </div>
    <a href="/addtour"><button class="addnew btn btn-success" type="button"
            style="margin-left: 1100px;margin-bottom: 25px;"><i class='fa fa-user-plus'></i>&nbsp; Add New
            Tour</button></a>

    <div id="pack" class="packages">
        <div class="container">
            <div class="packages-content">
                <div class="row">
                    <% for(const tour of tours){%>
                        <div class="col-md-4 col-sm-6">
                            <div class="single-package-item">
                                <div>

                                    <img style="height:200px" src="/<%=tour.DispImageurl%>" alt="package-place">
                                </div>
                                <div class="single-package-item-txt">
                                    <h3><a href="/admindb/opentour/<%=tour._id%>">
                                            <%=tour.tname%>
                                        </a> <span class="pull-right"><i class="fa-solid fa-indian-rupee-sign "></i>
                                            <%=tour.tprice%>
                                        </span></h3>
                                    <div class="packages-para">
                                        <p><i class="fa fa-angle-right"></i> 5 star accommodation</p>
                                        <p>
                                            <span><i class="fa fa-angle-right"></i> transportation</span>
                                            
                                        </p>
                                    </div>
                                    <div class="packages-review">
                                        <p>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                            <i class="fa fa-star"></i>
                                        </p>
                                    </div>
                                    <div class="about-btn">
                                        <button style="background-color: #06bbcc;" class="about-view packages-btn"
                                            data-toggle="modal" data-target="#my-<%=tour._id%>">
                                            Edit tour
                                        </button>
                                        <div class="modal fade" id="my-<%=tour._id%>" role="dialog">
                                            <div class="modal-dialog modal-lg">
            
                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div  class="hidden">
                                                            <form method="POST" action="/admindb/edit/<%=tour._id%>">
                                                                
                                                                
                                                                <div class="form-group">
                                                                    <label for="tname">Tour Name</label>
                                                                    <input type="text" class="form-control" id="tname" name="tname"
                                                                        value="<%=tour.tname%>">
                                                                </div>
                                                                <div class="form-group">
                                                                    <label for="tprice">Tour Price</label>
                                                                    <input type="number" class="form-control" id="tprice"
                                                                        name="tprice" value="<%=tour.tprice%>">
                                                                </div>
                                                                <button type="submit" class="btn btn-primary" id="saveChangesBtn">Save Changes</button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default"
                                                            data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
            
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>         
                        </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
<%- include("../partials/admindbfooter.ejs"); %>