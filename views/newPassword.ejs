<%- include("partials/header.ejs"); %>
<div class="login-page">
    <%- include("partials/navbar.ejs"); %>
    
            <div class="container login-container login">
                <div class="row login-row">
                    <div class="col-md-12">
                        <div class="row login-row logo">
                            <img src="../images/vihari-logo.png" class="image-logo">
                        </div>
                        <div class="row login-row">
                            <div class="col-md-6">
                                <form action="/newPassword" method="post">
                                    <% if (errorMsg){%>
                                        <div class="user-message user-message--error"><%= errorMsg %></div>
                                        <% } %> 
                                    <div class="input-group mb-3">
                                        <span class="input-group-text span"><i class="fa-solid fa-key icon"></i></span>
                                        <div class="form-floating">
                                            <input type="password" class="form-control inputs" id="floatingInputGroup1"
                                                placeholder="Username" fdprocessedid="2myzgp" id="pass" name="psd">
                                            <label for="floatingInputGroup1" class="label-login">Password</label>
                                        </div>                                
                                    </div>
                                    <input type="hidden" name="userId" value="<%= userId %>">
                                    <input type="hidden" name="passwordToken" value="<%=passwordToken %>">
                                    <input type="submit" class="btn btn-primary btn-submit-login" fdprocessedid="en612b"
                                        value="Update password">

                                </form>
                                <div class="row login-row signin">
                                    <a href="/signup">Don't have an account? Sign Up</a>
                                    <a href="/reset">Forgot password? click here to reset</a>
                                    <!-- <a href="/adminlogin">If you are admin login here</a> -->
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
            <%- include('partials/footer.ejs');%>